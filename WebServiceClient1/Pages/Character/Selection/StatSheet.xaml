<UserControl x:Class="DnDServicePlayer.Pages.Character.Selection.StatSheet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DnDServicePlayer.Pages.Character.Selection"
             mc:Ignorable="d" 
             d:DesignHeight="505" d:DesignWidth="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Valeur" Grid.Column="3" HorizontalAlignment="Left" Margin="0,1,0,0" VerticalAlignment="Top" Width="80" Height="40" Grid.Row="1" Grid.RowSpan="2"/>
        <Label Content="Modificateur" Grid.Column="4" HorizontalAlignment="Left" Margin="0,1,0,0" VerticalAlignment="Top" Width="80" Height="40" Grid.Row="1" Grid.RowSpan="2"/>
        <Label Content="Force" Grid.Column="1" HorizontalAlignment="Left" Margin="10,12,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Label Content="Constitution" Grid.Column="1" HorizontalAlignment="Left" Margin="10,13,0,0" Grid.Row="3" VerticalAlignment="Top"/>
        <Label Content="Dextérité" Grid.Column="1" HorizontalAlignment="Left" Margin="10,14,0,0" Grid.Row="4" VerticalAlignment="Top"/>
        <Label Content="Intelligence" Grid.Column="1" HorizontalAlignment="Left" Margin="10,15,0,0" Grid.Row="5" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <Label Content="Charisme" Grid.Column="1" HorizontalAlignment="Left" Margin="10,16,0,0" Grid.Row="6" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <Label Content="Sagesse" Grid.Column="1" HorizontalAlignment="Left" Margin="10,17,0,0" Grid.Row="7" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <TextBox Grid.Column="3" HorizontalAlignment="Left" Margin="0,5,0,0" Grid.Row="2" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="50" Height="30"/>
        <TextBox Grid.Column="3" HorizontalAlignment="Left" Margin="0,5,0,0" Grid.Row="3" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="50" Height="30"/>
        <TextBox Grid.Column="3" HorizontalAlignment="Left" Margin="0,5,0,0" Grid.Row="4" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="50" Height="30"/>
        <TextBox Grid.Column="3" HorizontalAlignment="Left" Margin="0,5,0,0" Grid.Row="5" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="50" Height="30"/>
        <TextBox Grid.Column="3" HorizontalAlignment="Left" Margin="0,5,0,0" Grid.Row="6" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="50" Height="30" Grid.RowSpan="2"/>
        <TextBox Grid.Column="3" HorizontalAlignment="Left" Margin="0,5,0,0" Grid.Row="7" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="50" Height="30" Grid.RowSpan="2"/>
        <TextBox Grid.Column="4" HorizontalAlignment="Left" Margin="0,5,0,0" Grid.Row="2" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="50" Height="30"/>
        <TextBox Grid.Column="4" HorizontalAlignment="Left" Margin="0,5,0,0" Grid.Row="3" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="50" Height="30"/>
        <TextBox Grid.Column="4" HorizontalAlignment="Left" Margin="0,5,0,0" Grid.Row="4" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="50" Height="30"/>
        <TextBox Grid.Column="4" HorizontalAlignment="Left" Margin="0,5,0,0" Grid.Row="5" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="50" Height="30"/>
        <TextBox Grid.Column="4" HorizontalAlignment="Left" Margin="0,5,0,0" Grid.Row="6" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="50" Height="30" Grid.RowSpan="2"/>
        <TextBox Grid.Column="4" HorizontalAlignment="Left" Margin="0,5,0,0" Grid.Row="7" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="50" Height="30" Grid.RowSpan="2"/>






        <Label Content="Réflexe" HorizontalAlignment="Left" Margin="10,12,0,0" Grid.Row="2" VerticalAlignment="Top" Grid.Column="7"/>
        <Label Content="Vigueur" HorizontalAlignment="Left" Margin="10,14,0,0" Grid.Row="4" VerticalAlignment="Top" Grid.Column="7"/>
        <Label Content="Volonté" HorizontalAlignment="Left" Margin="10,13,0,0" Grid.Row="3" VerticalAlignment="Top" Grid.Column="7"/>
        <Label Content="Classe Armure" Grid.Column="7" HorizontalAlignment="Left" Margin="10,15,0,0" Grid.Row="5" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <Label Content="Résistance magique" Grid.Column="7" HorizontalAlignment="Left" Margin="10,16,0,0" Grid.Row="6" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <Label Content="Initiative" Grid.Column="7" HorizontalAlignment="Left" Margin="10,17,0,0" Grid.Row="7" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <TextBox Grid.Column="8" HorizontalAlignment="Left" Height="30" Margin="0,5,0,0" Grid.Row="2" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="50"/>
        <TextBox Grid.Column="8" HorizontalAlignment="Left" Height="30" Margin="0,5,0,0" Grid.Row="3" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="50"/>
        <TextBox Grid.Column="8" HorizontalAlignment="Left" Height="30" Margin="0,5,0,0" Grid.Row="4" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="50"/>
        <TextBox Grid.Column="8" HorizontalAlignment="Left" Height="30" Margin="0,5,0,0" Grid.Row="5" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="50"/>
        <TextBox Grid.Column="8" HorizontalAlignment="Left" Height="30" Margin="0,5,0,0" Grid.Row="6" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="50" Grid.RowSpan="2"/>
        <TextBox Grid.Column="8" HorizontalAlignment="Left" Height="30" Margin="0,5,0,0" Grid.Row="7" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="50" Grid.RowSpan="2"/>
        <Label Content="Bonus à l'attaque" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="10" VerticalAlignment="Top"/>
        <Label Content="Bonus à la magie" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="11" VerticalAlignment="Top"/>
        <TextBox Grid.Column="3" HorizontalAlignment="Left" Height="30" Margin="0,5,0,0" Grid.Row="10" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="50"/>
        <TextBox Grid.Column="3" HorizontalAlignment="Left" Height="30" Margin="0,5,0,0" Grid.Row="11" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="50"/>
    </Grid>
</UserControl>
