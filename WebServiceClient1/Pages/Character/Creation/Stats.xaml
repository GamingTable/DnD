<UserControl x:Class="DnDServicePlayer.Pages.Character.Creation.Stats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DnDServicePlayer.Pages.Character.Creation"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800" Width="710" Height="404">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="64"/>
            <ColumnDefinition Width="45"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="39"/>
            <RowDefinition/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Label x:Name="label" Content="Répartition des Points de Caractéristiques" Grid.Column="1" HorizontalContentAlignment="Center" FontSize="29.333" FontWeight="Bold" Margin="0,-2,0,2" Grid.ColumnSpan="3"/>
        <StackPanel Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="1" Grid.RowSpan="1">
            <ListBox x:Name="charac_list_box">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel  Orientation="Horizontal">
                            <Label x:Name="name_display" VerticalContentAlignment="Center" Content="{Binding name}" FontWeight="Bold" FontSize="16" />
                            <!--<TextBlock x:Name="description_display" Text="{Binding description}" FontStyle="Italic" FontSize="13.333" TextWrapping="WrapWithOverflow"/>-->
                            <TextBlock x:Name="base_value_display" />
                            <Label Content="+" />
                            <TextBlock x:Name="race_value_display" />
                            <Label Content="=" />
                            <TextBlock x:Name="total_value_display" />
                            <TextBlock x:Name="base_mod_display" />
                            <Label Content="+" />
                            <TextBlock x:Name="class_mod_display" />
                            <Label Content="=" />
                            <TextBlock x:Name="total_mod_display" />
                            <Button x:Name="increase_value_button" Click="increase_value_button_Click" Content="+" />
                            <Button x:Name="decrease_value_button" Click="decrease_value_button_Click" Content="-" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

    </Grid>
</UserControl>
