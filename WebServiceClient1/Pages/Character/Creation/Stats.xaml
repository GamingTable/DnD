<UserControl x:Class="DnDServicePlayer.Pages.Character.Creation.Stats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DnDServicePlayer.Pages.Character.Creation"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800" Width="710" Height="404">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="45"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="39"/>
            <RowDefinition/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Label x:Name="label" Content="Répartition des Points de Caractéristiques" Height="45" Width="620" Grid.Column="1" HorizontalContentAlignment="Center" FontSize="29.333" FontWeight="Bold" Margin="0,-4,0,0"/>
        <StackPanel Grid.Column="1" Height="275" Grid.Row="2" Width="620">
            <ListBox x:Name="charac_list_box" Grid.Column="1" Grid.Row="2" Width="620" Height="275">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel  Orientation="Horizontal" Height="auto" Width="600">
                            <Label x:Name="name_display" Width="100" Height="auto" Margin="2,0,0,0" VerticalContentAlignment="Center" Content="{Binding name}" FontWeight="Bold" FontSize="16" />
                            <TextBlock x:Name="description_display" Height="auto" Margin="12,0,0,0" Width="400" Text="{Binding description}" FontStyle="Italic" FontSize="13.333" TextWrapping="WrapWithOverflow"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

    </Grid>
</UserControl>
